extends ../layout

block content
  .max-w-md.mx-auto.bg-white.p-8.rounded.shadow
    h2.text-2xl.font-bold.mb-6 Регистрация

    if errors
      each error in errors
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4(role="alert")
          span.block= error.msg

    form(action="/auth/register" method="POST")
      .mb-4
        label.block.text-gray-700.mb-2(for="login") Логин
        input.w-full.px-3.py-2.border.rounded(id="login" name="login" type="text" required value=login)
      
      .mb-4
        label.block.text-gray-700.mb-2(for="email") Email
        input.w-full.px-3.py-2.border.rounded(id="email" name="email" type="email" required value=email)
      
      .mb-4
        label.block.text-gray-700.mb-2(for="password") Пароль
        input.w-full.px-3.py-2.border.rounded(id="password" name="password" type="password" required minlength="6")
      
      .mb-6
        label.block.text-gray-700.mb-2(for="confirmPassword") Подтвердите пароль
        input.w-full.px-3.py-2.border.rounded(id="confirmPassword" name="confirmPassword" type="password" required minlength="6")
      
      button.w-full.bg-blue-600.text-white.py-2.px-4.rounded(type="submit") Зарегистрироваться
    
    .mt-4.text-center
      span Уже есть аккаунт? 
      a.text-blue-600.hover_underline(href="/auth/login") Войти