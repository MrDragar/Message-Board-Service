extends ../layout

block content
  .max-w-md.mx-auto.bg-white.p-8.rounded.shadow
    h2.text-2xl.font-bold.mb-6 Вход в систему

    if error
      .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4(role="alert")
        span.block= error

    form(action="/auth/login" method="POST")
      .mb-4
        label.block.text-gray-700.mb-2(for="login") Логин
        input.w-full.px-3.py-2.border.rounded(id="login" name="login" type="text" required value=login)
      
      .mb-4
        label.block.text-gray-700.mb-2(for="password") Пароль
        input.w-full.px-3.py-2.border.rounded(id="password" name="password" type="password" required)
      
      .mb-6
        label.inline-flex.items-center
          input.form-checkbox.h-5.w-5.text-blue-600(type="checkbox" name="remember")
          span.ml-2.text-gray-700 Запомнить меня
      
      button.w-full.bg-blue-600.text-white.py-2.px-4.rounded(type="submit") Войти
    
    .mt-4.text-center
      span Нет аккаунта? 
      a.text-blue-600.hover_underline(href="/auth/register") Зарегистрироваться